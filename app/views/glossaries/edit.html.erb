<% provide(:title, "用語集「#{@glossary_title}」を編集する") %>
<h1>用語集「<%= @glossary_title %>」を編集する</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@glossary, url: update_glossary_path(@glossary.name)) do |f| %>
      <%= render 'shared/glossary_error_messages' %>
    
      <%= f.hidden_field :id %>
    
      <%= f.label :name, "ID(半角英数字)" %>
      <%= f.text_field :name %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description, rows: "5" %>

      <div class="control-group">    
        <%= f.label :private %>
        <%= f.radio_button :private, "S" %> <label for="glossary_private_s">自分だけ編集できる</label>
        <%= f.radio_button :private, "U" %> <label for="glossary_private_u">ユーザ全員が編集できる</label>
      </div>
      <%= f.submit "更新する", class:"btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>